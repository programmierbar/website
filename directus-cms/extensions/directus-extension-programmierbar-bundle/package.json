{
    "name": "directus-extension-programmierbar-bundle",
    "description": "A collection of extension custom made for programmier.bar",
    "icon": "extension",
    "version": "1.0.0",
    "keywords": [
        "directus",
        "directus-extension",
        "directus-extension-bundle"
    ],
    "type": "module",
    "files": [
        "dist"
    ],
    "directus:extension": {
        "type": "bundle",
        "path": {
            "app": "dist/app.js",
            "api": "dist/api.js"
        },
        "entries": [
            {
                "type": "interface",
                "name": "publishable",
                "source": "src/publishable/index.ts"
            },
            {
                "type": "hook",
                "name": "deploy-website",
                "source": "src/deploy-website/index.ts"
            },
            {
                "type": "hook",
                "name": "set-slug",
                "source": "src/set-slug/index.ts"
            },
            {
                "type": "hook",
                "name": "set-published-on",
                "source": "src/set-published-on/index.ts"
            },
            {
                "type": "hook",
                "name": "schedule-publication",
                "source": "src/schedule-publication/index.ts"
            },
            {
                "type": "hook",
                "name": "screenshot",
                "source": "src/screenshot/index.ts"
            },
            {
                "type": "hook",
                "name": "buzzsprout",
                "source": "src/buzzsprout/index.ts"
            },
            {
                "type": "hook",
                "name": "create-profile",
                "source": "src/create-profile/index.ts"
            },
            {
                "type": "hook",
                "name": "podcast-transcript",
                "source": "src/podcast-transcript/index.ts"
            },
            {
                "type": "hook",
                "name": "algolia-index",
                "source": "src/algolia-index/index.ts"
            }
        ],
        "host": "^10.10.0"
    },
    "scripts": {
        "build": "directus-extension build",
        "dev": "directus-extension build -w --no-minify",
        "link": "directus-extension link",
        "add": "directus-extension add",
        "eslint": "eslint --fix .",
        "prettier": "prettier . --write",
        "algolia-index-rebuild": "tsx src/algolia-index/cli/rebuild-index.ts",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@directus/errors": "^0.3.2",
        "@directus/extensions-sdk": "^12.1.0",
        "@directus/sdk": "^18.0.3",
        "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
        "@jest/globals": "^29.7.0",
        "@slack/web-api": "^7.2.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.10.2",
        "algoliasearch": "^5.18.0",
        "axios": "^1.7.2",
        "dotenv": "^16.4.7",
        "eslint": "^9.5.0",
        "eslint-config-prettier": "^9.1.0",
        "jest": "^29.7.0",
        "jest-environment-node": "^29.7.0",
        "meow": "^13.2.0",
        "prettier": "^3.3.2",
        "sanitize-html": "^2.14.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.0.0-alpha.20",
        "vue": "^3.5.13"
    }
}
